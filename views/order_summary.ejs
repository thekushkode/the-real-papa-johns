<%- include('partials/aux-start.ejs') %>

<div>
    <div class="text-center">
        <h1>Order Summary</h1>
    </div>
    <div class="m-4">
        <% pizzas && pizzas.forEach(pizza => { %>
        <div class="d-flex">
            <div>
                <img src="images/the-real-papa-johns.gif" alt="thumbnail" class="img-thumbnail" style="width: 200px">
            </div>
            <div>
                <h4><%= pizza.name %></h4>
                <h4><%= pizza.description %></h4>
                <h4 class="price"><%= pizza.price %></h4>
            </div>
        </div>
        <hr>
        <% }) %>
    </div>
    <div class="m-4">
        <% appetizers && appetizers.forEach(app => { %>
        <div class="d-flex">
            <div>
                <img src="images/the-real-papa-johns.gif" alt="thumbnail" class="img-thumbnail" style="width: 200px">
            </div>
            <div>
                <h4><%= app.name %></h4>
                <h4><%= app.description %></h4>
                <h4 class="price"><%= app.price %></h4>
            </div>
        </div>
        <hr>
        <% }) %>
    </div>
    <div class="m-4">
        <% desserts && desserts.forEach(dessert => { %>
        <div class="d-flex">
            <div>
                <img src="images/the-real-papa-johns.gif" alt="thumbnail" class="img-thumbnail" style="width: 200px">
            </div>
            <div>
                <h4><%= dessert.name %></h4>
                <h4><%= dessert.description %></h4>
                <h4 class="price"><%= dessert.price %></h4>
            </div>
        </div>
        <hr>
        <% }) %>
    </div>
    <hr>
    <h3 class="text-center red-text">Order Total: $<span class="total"><%= total %></span></h3>
</div>

<%- include('partials/page-end.ejs') %>
<%- include('partials/page-close.ejs') %>