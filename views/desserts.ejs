<%- include('partials/aux-start.ejs') %>

<div class="mt-4">

    <div class="row">

        <div class="container d-flex col-6 col-sm-6 col-md-6 col-lg-6">
            <div class="card">
                <img class="card-img-top" src="images/cookie_cake.jpeg" alt="Card image cap">
                <div class="card-body">


                    <h4 class="card-title"><a>Chocloate Chip Cookie "Pizza"</a></h4>

                    <p class="card-text">Kinda like a pizza-- except it's a chocolate chip cookie!
                    </p>
                    <p class="card-text">$4.99</p>

                    <form action="/desserts" method="POST">
                        <button type="submit" class="btn btn-primary">Add</button>
                        <input type="hidden" name="name" value="Chocolate Chip Cookie Cake">
                        <input type="hidden" name="description"
                            value="Kinda like a pizza-- except it's a chocolate chip cookie!">
                        <input type="hidden" name="price" value="$4.99">
                    </form>
                    <form action="" method="">
                        <button type="submit" class="btn btn-primary">Remove</button>
                    </form>

                </div>

            </div>
        </div>
        <div class="container d-flex col-6 col-sm-6 col-md-6 col-lg-6">
            <div class="card">
                <img class="card-img-top" src="images/brownies.jpeg" alt="Card image cap">
                <div class="card-body">


                    <h4 class="card-title"><a>Double Chocolate Chip Brownie</a></h4>

                    <p class="card-text">Moist chocolate brownie riddled with chocolate chip shrapnel. LOL!</p>
                    <p class="card-text">$4.99</p>

                    <form action="/desserts" method="POST">
                        <button type="submit" class="btn btn-primary">Add</button>
                        <input type="hidden" name="name" value="Double Chocolate Chip Brownie">
                        <input type="hidden" name="description"
                            value="Moist chocolate brownie riddled with chocolate chip shrapnel. LOL!">
                        <input type="hidden" name="price" value="$4.99">
                    </form>
                    <form action="" method="">
                        <button type="submit" class="btn btn-primary">Remove</button>
                    </form>

                </div>

            </div>
        </div>
    </div>
</div>



